{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/send-whatsapp",
      "methods": ["POST"], // Ensure it's set to handle POST requests
      "dest": "/server.js"
    }
  ],
  "env": {
    "TWILIO_ACCOUNT_SID": "your_twilio_account_sid",
    "TWILIO_AUTH_TOKEN": "your_twilio_auth_token",
    "TWILIO_WHATSAPP_NUMBER": "your_twilio_whatsapp_number"
  }
}
